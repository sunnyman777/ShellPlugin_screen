<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <!--
    android:layout_width="@dimen/screen_edit_tab_view_width"
    android:layout_height="@dimen/screen_edit_tab_view_height"
    -->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/screen_edit_tab_margin_top"
        android:background="@drawable/gl_screen_edit_item_app_select"
        android:paddingLeft="@dimen/screen_edit_view_padding"
        android:paddingRight="@dimen/screen_edit_view_padding" >

        <ImageView
            android:id="@+id/thumb"
            android:layout_width="56dip"
            android:layout_height="56dip"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/gl_ic_launcher_application" />

        <ImageView
            android:id="@+id/screen_edit_item_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:paddingRight="11dp"
            android:paddingTop="11dp"
            android:src="@drawable/gl_gostore_bannerindicator_point_focus"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/screen_edit_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@drawable/gl_folder_select"
            android:visibility="invisible" />
    </FrameLayout>

    <com.jiubang.shell.common.component.ShellTextViewWrapper
        android:id="@+id/title"
        android:layout_width="@dimen/screen_edit_tab_view_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dip"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="12sp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.jiubang.shell.folder.GLAppDrawerFolderIcon xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appdrawer_foldericon"
    android:layout_width="@dimen/app_icon_total_width"
    android:layout_height="@dimen/app_icon_total_height"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/app_icon_padding_left_right"
    android:paddingRight="@dimen/app_icon_padding_left_right" >

    <Model3DMultiView
        android:id="@+id/multmodel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.jiubang.shell.folder.GLModelFolder3DView
            android:id="@+id/model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" >
        </com.jiubang.shell.folder.GLModelFolder3DView>

        <ImageView
            android:id="@+id/imge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/gl_uninstall"
            android:padding="0dp"
            android:visibility="invisible" />
    </Model3DMultiView>

    <com.jiubang.shell.common.component.ShellTextViewWrapper
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="@dimen/app_icon_text_pad"
        android:ellipsize="end"
        android:gravity="center_horizontal|top"
        android:maxLines="2"
        android:minLines="2"
        android:textColor="@color/text_color"
        android:textSize="@dimen/app_icon_font_size" />

</com.jiubang.shell.folder.GLAppDrawerFolderIcon>
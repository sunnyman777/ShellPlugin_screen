<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/app_icon_total_width"
    android:layout_height="@dimen/app_icon_total_height"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/folder_ad_item_img_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" />

    <com.jiubang.shell.common.component.ShellTextViewWrapper
        android:id="@+id/folder_ad_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="@dimen/app_icon_text_pad"
        android:ellipsize="end"
        android:gravity="center_horizontal|top"
        android:maxLines="2"
        android:minLines="2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/text_color"
        android:textSize="@dimen/app_icon_font_size" />
</LinearLayout>
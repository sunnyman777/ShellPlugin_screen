<?xml version="1.0" encoding="utf-8"?>
<com.jiubang.shell.appdrawer.promanage.actionbar.GLProManageActionBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jiubang.shell.common.component.GLCheckBox
            android:id="@+id/checkbox_hide_lock_apps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/promanage_checkbox_text"
            android:visibility="invisible" />

        <com.jiubang.shell.appdrawer.promanage.actionbar.GLMemoryCleanButtonComponent
            android:id="@+id/clean_button_component"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical" >

            <com.jiubang.shell.appdrawer.component.GLMemoryCleanButton
                android:id="@+id/button_clean"
                android:layout_width="@dimen/promanage_clean_button_size"
                android:layout_height="@dimen/promanage_clean_button_size" />

            <com.jiubang.shell.common.component.ShellTextViewWrapper
                android:id="@+id/text_memory_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:textColor="@color/promanage_memory_info_text_color"
                android:textSize="12sp" />
        </com.jiubang.shell.appdrawer.promanage.actionbar.GLMemoryCleanButtonComponent>


</com.jiubang.shell.appdrawer.promanage.actionbar.GLProManageActionBar>
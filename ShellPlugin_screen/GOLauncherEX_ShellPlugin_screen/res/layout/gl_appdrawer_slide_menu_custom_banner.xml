<?xml version="1.0" encoding="utf-8"?>
<com.jiubang.shell.appdrawer.slidemenu.advert.SlideMenuAdvertCustom xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8.5dp"
    android:layout_marginTop="8.5dp"
    android:background="@drawable/gl_slide_menu_custom_banner_bg"
    android:paddingLeft="8.5dp"
    android:paddingRight="8.5dp" >

    <ImageView
        android:id="@+id/slide_menu_advert_app_icon"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp" />

    <com.jiubang.shell.common.component.ShellTextViewWrapper
        android:id="@+id/slide_menu_advert_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/slide_menu_advert_app_icon"
        android:layout_toRightOf="@+id/slide_menu_advert_app_icon"
        android:layout_marginTop="8dp"
        android:ellipsize="marquee"
        android:maxLines="2"
        android:textColor="#313131"
        android:textSize="18sp" />

    <com.jiubang.shell.common.component.ShellTextViewWrapper
        android:id="@+id/slide_menu_advert_app_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_menu_advert_app_title"
        android:layout_toRightOf="@+id/slide_menu_advert_app_icon"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="#626262"
        android:textSize="12sp" />

    <com.jiubang.shell.common.component.ShellTextViewWrapper
        android:id="@+id/slide_menu_advert_app_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/slide_menu_advert_app_icon"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/slide_menu_advert_app_icon"
        android:textColor="#626262"
        android:textSize="11sp"
        android:maxLines="2" />

</com.jiubang.shell.appdrawer.slidemenu.advert.SlideMenuAdvertCustom>
<?xml version="1.0" encoding="utf-8"?>
<com.jiubang.shell.screen.zero.navigation.GLAdItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_screen_ad_icon_width" >

        <!--
        logo 

        <FrameLayout
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero_screen_ad_icon_height" >
        -->

        <com.jiubang.shell.common.component.ShellTextViewWrapper
            android:id="@+id/text_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#4f4f4f"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/kill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:src="@drawable/gl_zero_kill_selector" />
    </FrameLayout>

</com.jiubang.shell.screen.zero.navigation.GLAdItemView>